<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.clinicalapplication.controllers.PatientFormController">

    <top>
        <Label fx:id="formTitle"
               text="Add/Edit Patient"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <TextField fx:id="idField" promptText="Patient ID"/>
            <TextField fx:id="nameField" promptText="Full Name"/>
            <TextField fx:id="addressField" promptText="Address"/>
            <TextField fx:id="phoneField" promptText="Phone Number"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button fx:id="saveButton" text="Save" prefWidth="100"/>
            <Button fx:id="cancelButton" text="Cancel" prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>
